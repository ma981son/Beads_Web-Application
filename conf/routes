# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Controller for Beads
GET     /                           controllers.BeadsController.beads
GET     /new                        controllers.BeadsController.newTemp
GET     /resize/:length/:width      controllers.BeadsController.resize(length: Int,width: Int)

GET     /about                      controllers.BeadsController.about

GET     /huichol                    controllers.BeadsController.huichol

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
